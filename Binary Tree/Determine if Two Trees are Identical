
class Solution {
    // Function to check if two trees are identical.
    public boolean isIdentical(Node r1, Node r2) {
        // Base case
         if(r1 == null && r2 == null) {
            return true;
        }
        
        if(r1 == null && r2 != null) {
            return false;
        }
        
        if(r1 != null && r2 == null) {
            return false;
        }

        boolean left = isIdentical(r1.left, r2.left);
        boolean right = isIdentical(r1.right, r2.right);

        boolean value = (r1.data == r2.data);

          if(left && right && value) {
            return true;
        }
        else
        {
            return false;
        }
    }
}
