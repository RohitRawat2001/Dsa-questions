class Solution{
      static int maxIndexDiff(int a[], int n) { 
        
        int ans = 0;
        int  low = 0;
        int high = n-1;
        
     while(low <= high){
            if(a[low] <= a[high]){
            ans = Math.max(ans,high-low);
            low++;
            high = n-1;
        }else{
            high--;
        }
      
     }
     return ans;
        
    }
}
