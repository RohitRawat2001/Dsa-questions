class Solution {

    // arr: input array
    // Function to find the sum of contiguous subarray with maximum sum.
    int maxSubarraySum(int[] arr) {
        int max = Integer.MIN_VALUE;
        int sum = 0;

        // n is the length of the array
        int n = arr.length;

        for(int i = 0; i < n ; i++){
            sum += arr[i];
            max = Math.max(max, sum);
            if( sum < 0){
                sum = 0;
            }
        }
        return max; // Return the maximum sum
    }
}
